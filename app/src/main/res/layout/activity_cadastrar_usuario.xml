<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/blue" />

        <RelativeLayout
            android:id="@+id/rl_two_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value5">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/user"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="-1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_one_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="200dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="#fcfcfc"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/value10"
                            android:text="Cadastrar usuÃ¡rio"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/value18"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/value5"
                            android:layout_margin="@dimen/value5"
                            android:text="Nome"
                            android:textAlignment="textStart"
                            android:textStyle="bold"
                            android:textSize="@dimen/value15"/>

                        <EditText
                            android:id="@+id/edtNome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/value5"
                            android:layout_marginRight="@dimen/value5"
                            android:ems="10"
                            android:textSize="@dimen/value14"
                            android:hint="Digite seu nome"
                            android:nextFocusDown="@+id/edtSobreNome"
                            android:imeOptions="actionNext"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/value5"
                            android:layout_margin="@dimen/value5"
                            android:text="Sobrenome"
                            android:textAlignment="textStart"
                            android:textStyle="bold"
                            android:textSize="@dimen/value15"/>

                        <EditText
                            android:id="@+id/edtSobreNome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/value5"
                            android:layout_marginRight="@dimen/value5"
                            android:ems="10"
                            android:textSize="@dimen/value14"
                            android:hint="Digite seu sobrenome"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/edtCpf"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/value5"
                            android:layout_margin="@dimen/value5"
                            android:text="CPF:"
                            android:textAlignment="textStart"
                            android:textStyle="bold"
                            android:textSize="@dimen/value15"/>

                        <EditText
                            android:id="@+id/edtCpf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/value5"
                            android:layout_marginRight="@dimen/value5"
                            android:ems="10"
                            android:textSize="@dimen/value14"
                            android:hint="Digite seu cpf"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/edtCelular"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/value5"
                            android:layout_margin="@dimen/value5"
                            android:text="Celular"
                            android:textAlignment="textStart"
                            android:textStyle="bold"
                            android:textSize="15dp"/>

                        <EditText
                            android:id="@+id/edtCelular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/value5"
                            android:layout_marginRight="@dimen/value5"
                            android:ems="10"
                            android:textSize="@dimen/value14"
                            android:hint="Digite seu celular"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/edtDataNascimento"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/value5"
                            android:layout_margin="@dimen/value5"
                            android:text="Data de Nascimento"
                            android:textAlignment="textStart"
                            android:textStyle="bold"
                            android:textSize="15dp"/>

                        <EditText
                            android:id="@+id/edtDataNascimento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/value5"
                            android:layout_marginRight="@dimen/value5"
                            android:ems="10"
                            android:textSize="@dimen/value14"
                            android:hint="Digite sua data de Nascimento"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/edtEmail"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/value5"
                            android:layout_margin="@dimen/value5"
                            android:text="Email:"
                            android:textAlignment="textStart"
                            android:textStyle="bold"
                            android:textSize="@dimen/value15"/>

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/value5"
                            android:layout_marginRight="@dimen/value5"
                            android:ems="10"
                            android:hint="Digite seu email"
                            android:textSize="@dimen/value14"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/edtSenha"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/value5"
                            android:layout_margin="@dimen/value5"
                            android:text="Senha:"
                            android:textAlignment="textStart"
                            android:textStyle="bold"
                            android:textSize="@dimen/value15"/>


                        <EditText
                            android:id="@+id/edtSenha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/value5"
                            android:layout_marginRight="@dimen/value5"
                            android:layout_marginBottom="@dimen/value25"
                            android:ems="10"
                            android:hint="Digite sua senha"
                            android:textSize="@dimen/value14"
                            android:inputType="textPassword" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <Button
                android:id="@+id/btnCadastrar"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@id/cv_one_login"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="-35dp"
                android:elevation="15dp"
                android:background="@drawable/buttonstyle"
                android:text="Cadastrar"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="@dimen/value5"
                android:layout_marginRight="@dimen/value5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_horizontal"
                    android:layout_marginLeft="@dimen/value5"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/value5"
                    android:layout_weight="1"
                    android:text="Ir para o login?"
                    android:textAlignment="textEnd"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/idVoltarParaLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_horizontal"
                    android:layout_marginLeft="@dimen/value5"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/value5"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="Login"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
